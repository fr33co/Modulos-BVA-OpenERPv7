<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<!--Menu lista de Tecnico -->
		<record model="ir.actions.act_window" id="reparacion_list_action">
		    <field name="name">reparacion.canaima</field>
		    <field name="res_model">reparacion</field>
		    <field name="view_type">form</field>
		    <field name="view_mode">tree,form</field>
		    <field name="help" type="html">
				<p class="oe_view_nocontent_create">Registrar Reparación</p>
		    </field>
		</record> 
		
		<!--Formulario de Tecnico-->
		<record model="ir.ui.view" id="reparacion_form_view">
			<field name="name">reparacion.form</field>
			<field name="model">reparacion</field>
			<field name="arch" type="xml">
				<form string="sedes Form" version="7.0">

						<group col="3" colspan="3" >
							<group colspan="1">
                          			 <field name="c_solicitud" on_change="on_change_datos(c_solicitud)" colspan="1"/>
                        	</group>
	                        <group colspan="1">
	                            <field name="f_solicitud"/>
	                        </group>
	                        <group colspan="1">
								<field name="f_entrega" colspan="1"/>
	                        </group>
						</group>
						<group col="3" colspan="3" >
							<group string="Datos del Alumno" colspan="1">
								<field name="serial"/>
								<field name="nombre" />
								<field name="apellido" />
							</group>
							<group string="Datos del Representante" colspan="1">
								<field name="nombre_r"  />
								<field name="apellido_r"  />
								<field name="telefono" />
							</group>
						</group>
						<group colspan="3">
							<field name="descripcion" colspan="2"/>
						</group>

						<group string="Informacion del Reparación" col="3" colspan="3" >
							<group colspan="1">
								<field name="tecnico" placeholder="Nombre del Técnico a cargo"  class="oe_inline"/>
								<field name="estado"  class="oe_inline"/>
							</group>
						</group>
						<group col="3" colspan="3">						
							<field name="solucion" placeholder="Solucion y/o Información sobre la reparación" />
						</group>
				</form>
			</field>			
		</record>

		<record model="ir.ui.view" id="reparacion_tree_view">
			<field name="name">reparacion.tree</field>
			<field name="model">reparacion</field>
			<field name="arch" type="xml">
				<tree string="sedes Tree">
					<field name="c_solicitud" />
					<field name="f_entrega" />
					<field name="estado" />
				</tree>
			</field>			
		</record>
		<menuitem id="main_canaima_menu" name="Gestion de Canaimas" /> 
		<menuitem id="reparacion_canaima_menu" name="Reparaciones" parent="main_canaima_menu" />
		<menuitem id="reparacion_menu" name="Registro de Reparaciones" parent="reparacion_canaima_menu" action="reparacion_list_action" />
	</data>
</openerp>