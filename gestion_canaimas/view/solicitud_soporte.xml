<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

<!--Secuencia-->

        <record id="seq_type_proyectos" model="ir.sequence.type">
            <field name="name">Solicitud de soporte</field>
            <field name="code">solicitud.soporte</field>
        </record>
        <record id="seq_proyectos" model="ir.sequence">
            <field name="name">Solicitud de soporte</field>
            <field name="code">solicitud.soporte</field>
            <field name="prefix">SSC</field>
            <field name="padding">6</field>
        </record>
        
<!--Solicitud de Soporte Técnico para Canaimitas-->
        
		 <record model="ir.actions.act_window" id="solicitud_canaima_list_action">
		    <field name="name">Solicitud de Soporte</field>
		    <field name="res_model">solicitud.soporte</field>
		    <field name="view_type">form</field>
		    <field name="view_mode">tree,form</field>
		</record>

<!--Vista tree Solicitud -->

		<record model="ir.ui.view" id="solicitud_tree_view">
			<field name="name">Solicitud</field>
			<field name="model">solicitud.soporte</field>
			<field name="arch" type="xml">
				<tree string="Solicitud de soporte">
					<field name="c_solicitud" />
					<field name="f_solicitud" />
					<field name="f_entrega" />
					<field name="serial" />
					<field name="modelo" />
					<field name="nombre_r" />
					<field name="apellido_r" />
					<field name="telefono" />
					<field name="status" />
				</tree>
			</field>			
		</record>

<!--Vista formulario Solicitud -->

		<record model="ir.ui.view" id="solicitud_form_view">
			<field name="name">Solicitud</field>
			<field name="model">solicitud.soporte</field>
			<field name="arch" type="xml">
				<form string="Solicitud de soporte" version="7.0">
                    <group>
                        <group>
                            <field name="c_solicitud" />
                            <field name="user_register" />
                        </group>
                        <group>
                            <field name="f_solicitud" />
                            <field name="f_entrega"/>
                            <field name="status"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Datos de la computadora">
                            <group>
                                <group>
                                    <separator string="Datos del equipo y problemas:" colspan="2"/>
                                    <field name="modelo" placeholder="Modelo de la Canaimita" />
                                    <field name="serial" placeholder="Serial de la Canaimita" />
                                </group>
                                <group>
                                    <separator string="Componentes entregados:" colspan="2"/>
                                    <group>
                                        <field name="canaimita" />
                                        <field name="cargador" />
                                        <field name="bateria" />
                                    </group>
                                    <group>
                                        <field name="caja" />
                                        <field name="contrato" />
                                        <field name="otros" />
                                    </group>
                                </group>
                                <separator string="Descripcion del problema según el usuario:" colspan="2"/>
                                <field name="descripcion" nolabel="1" colspan="2"  placeholder="Descripción de la falla"/>
                            </group>
                        </page>
                        <page string="Datos del estudiante">
                            <group>
                                <group>
                                    <separator string="Datos personales del estudiante:" colspan="2"/>
                                    <field name="nombre" placeholder="Nombre del Alumno"/>
                                    <field name="apellido" placeholder="Apellido del Alumno"/>
                                    <field name="grado" placeholder="Grado que estudia actualmente"/>
                                </group>
                                <group>
                                    <separator string="Dirección del centro educativo:" colspan="2"/>
                                    <field name="escuela" placeholder="Escuela del Alumno"/>
                                    <field name="municipio" placeholder="Municipio del Alumno" />
                                    <field name="parroquia" placeholder="Parroquia del Alumno"/>
                                    <field name="direccion_r" colspan="2"  placeholder="Dirección de la escuela"/>
                                </group>
                            </group>
                        </page>
                        <page string="Datos del representante">
                            <group>
                                <group>
                                    <separator string="Datos personales del representante:" colspan="2"/>
                                    <field name="nombre_r" placeholder="Nombre del Representante" />
                                    <field name="apellido_r" placeholder="Apellido del Representante" />
                                    <field name="cedula" placeholder="Cédula del Representante" />
                                    <field name="telefono"  placeholder="Teléfono del Representante"/>
                                    <field name="correo"  placeholder="Correo del Representante"/>
                                </group>
                                <group>
                                    <separator string="Dirección donde habita:" colspan="2"/>
                                    <field name="municipio_r"/>
                                    <field name="parroquia_r"/>
                                    <field name="direccion_r" nolabel="1" colspan="2"  placeholder="Dirección del Representante"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
				</form>
			</field>			
		</record>
        
<!--Menu-->

		<menuitem id="main_canaima_menu" name="Gestion de Canaimas" /> 
		<menuitem id="soporte_canaima_menu" name="Solicitud de Soporte" parent="main_canaima_menu" />
		<menuitem id="solicitudes_menu" name="Registrar Solicitud" parent="soporte_canaima_menu" action="solicitud_canaima_list_action" />
		
    </data>
</openerp>
