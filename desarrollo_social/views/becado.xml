<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

		<record model="ir.actions.act_window" id="accion_vista_becados">
		 	<field name="name">Desarrollo Social</field>
			<field name="res_model">hr.employee</field>
			<field name="view_type">form</field>
			<field name="domain">[('category_ids.name','ilike','Becado')]</field>
			<field name="view_mode">tree,form</field>
		</record>

		<record id="vista_becados" model="ir.ui.view">
			<field name="name">Becado</field>
			<field name="model">hr.employee</field>
			<field name="inherit_id" ref="hr.view_employee_form"/>
			<field name="arch" type="xml">
				<field name="identification_id" position="replace">
					<field name="cedula"/>
				</field>
				<field name="cedula" position="before">
					<field name="grupo" invisible="0"/>
				</field>
				<field name="passport_id" position="after">
					<field name="tiempo_servicio"/>
				</field>
				<field name="tiempo_servicio" position="after">
					<field name="empleado" groups="desarrollo_social.grupo_desarrollo_social1"/>
				</field>
				<field name="empleado" position="after">
					<field name="tipo_beca"/>
				</field>
				<!--<field name="primer_nombre" position="after">
					<field name="segundo_nombre"/>
				</field>
				<field name="segundo_nombre" position="after">
					<field name="primer_apellido"/>
				</field>
				<field name="primer_apellido" position="after">
					<field name="segundo_apellido"/>
				</field>-->
				<field name="address_home_id" position="after">
					<field name="direccion"/>
				</field>
				<field name="empleado" position="after">
					<field name="grado_instruccion"/>
				</field>
				<field name="grado_instruccion" position="after">
					<field name="titulo_obtenido"/>
				</field>
				<field name="titulo_obtenido" position="after">
					<field name="estado_de_estudios"/>
				</field>
				<field name="estado_de_estudios" position="after">
					<field name="estudios_actuales" attrs="{'invisible': [('estado_de_estudios', '!=', True) ] }"/>
				</field>
				<field name="otherid" position="replace">
					<field name="grupo_sanguineo"/>
				</field>
				<field name="direccion" position="before">
					<field name="tlf_movil"/>
				</field>
				<field name="tlf_movil" position="before">
					<field name="tlf_local"/>
				</field>
				<field name="tlf_local" position="before">
					<field name="twitter" class="oe_inline"/>
				</field>
				<field name="marital" position="after">
					<field name="fecha_ingreso"/>
				</field>
				<field name="fecha_ingreso" position="after">
					<field name="fecha_egreso"/>
				</field>
				<field name="department_id" position="before">
					<field name="sede"/>
				</field>
				<field name="department_id" position="after">
					<field name="area"/>
				</field>
				<field name="area" position="after">
					<field name="tipo_nomina"/>
				</field>
				<field name="coach_id" position="after">
					<field name="coordinador_eje" widget="selection"/>
					<!--groups="desarrollo_social.desarrollosocial"-->
				</field>
				<field name="coordinador_eje" position="after">
					<field name="coordinador_sede" widget="selection"/>
					<!--groups="desarrollo_social.desarrollosocial"-->
				</field>
<!--
				<field name="tipo_nomina" position="after">
					<field name="class_personal"/>
				</field>
-->
				<field name="birthday" position="after">
					<field name="edad" class="oe_inline"/>
				</field>
				<!--<field name="class_personal" position="after">
					<field name="cargo_desempenado"/>
				</field>-->
				<!--<field name="work_location" position="after">
					<field name="cargo_desempenado"/>
				</field>-->
				<field name="bank_account_id" position="before">
					<field name="asignacion"/>
				</field>
				<field name="twitter" position="after">
					<field name="correo" widget="email"/>
				</field>
				<!--<field name="sueldo" position="after">
					<field name="entidad_bancaria"/>
				</field>-->
				<field name="tiempo_servicio" position="after">
					<field name="ano_antiguedad" class="oe_inline"/>
				</field>
				<field name="estudios_actuales" position="after">
					<field name="camisa" class="oe_inline"/>
				</field>
				<field name="camisa" position="after">
					<field name="pantalon" class="oe_inline"/>
				</field>
				<field name="pantalon" position="after">
					<field name="zapato" class="oe_inline"/>
				</field>
				<field name="zapato" position="after">
					<field name="caja_ahorro" class="oe_inline" attrs="{'invisible': [('estado_de_estudios', '!=', True) ] }"/>
				</field>
				<field name="caja_ahorro" position="after">
					<field name="prima_responsabilidad" class="oe_inline" attrs="{'invisible': [('estado_de_estudios', '!=', True) ] }"/>
				</field>
				<field name="direccion" position="after">
					<field name="cne"/>
				</field>
				<field name="cne" position="after">
					<field name="centro_votacion" attrs="{'invisible': [('cne', '!=', '1') ] }"/>
				</field>
				<field name="active" position="after">
					<field name="status" attrs="{'invisible':[('active','=',True)]}"/>
				</field>
				<field name="status" position="after">
					<field name="desc_status" attrs="{'invisible':[('active','=',True)]}"/>
				</field>
				<field name="category_ids" position="after">
				<label for="carga_familiar" class="oe_edit_only"/>
					<field name="carga_familiar" class="oe_inline" nolabel="0"/>
				</field>
				<!--Campo oculto para formato PDF -->
				<field name="carga_familiar" position="after">
					<field name="fecha_actual" invisible="1"/>
				</field>
<!--
				<field name="birthday" position="replace">
					<field name="fecha_nacimiento" on_change="validar_fecha(fecha_nacimiento)"/>
				</field>
-->
				<!--Nueva página para el "notebook"-->
				<page string="HR Settings" position="after">
					<page string="Carga Familiar" attrs="{'invisible': [('carga_familiar', '!=', '1') ] }">
						<field name="familiar" nolabel="1" colspan="4" mode="tree">
							<tree string="Registrar Familiares">
							 <field name="cedula_familiar"/>
							 <field name="primer_nombres_familiar"/>
							 <field name="primer_apellido_familiar"/>							 
							 <field name="parentesco"/>							 
							 <field name="telefono_fijo"/>							 
							 <field name="telefono_movil"/>							 
							 <field name="correo"/>							 
							 <field name="direccion"/>							 
							</tree>
						</field>
					</page>
				</page>
				<!--Nueva página para el "notebook"-->
				
			</field>
		</record>
		
		<record model="ir.ui.view" id="vista_becados_tree">
			<field name="name">Desarrollo Social</field>
			<field name="model">hr.employee</field>
			<field name="inherit_id" ref="hr.view_employee_tree"/>
			<field name="arch" type="xml">
					<field name="name" position="before">
						<field name="cedula"/>
					</field>
					<field name="company_id" position="replace">
						<field name="tlf_movil"/>
					</field>
					<field name="job_id" position="after">
						<field name="category_ids"/>
					</field>
			</field>
		</record>
		
		<menuitem name="Desarrollo Social" id="menu_desarrollo_social"/>
		<menuitem name="Desarrollo Social" id="menu_desarrollo_social_main" parent="menu_desarrollo_social"/>
		<menuitem parent="menu_desarrollo_social_main" id="becado" action="accion_vista_becados" name="Becado"/>
		<menuitem id="menu_principal_mantenimiento" name="Mantenimiento" parent="menu_desarrollo_social"/>

	</data>
</openerp>
