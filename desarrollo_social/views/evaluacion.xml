<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	
	<data>
			
		<!--Accionador para el menu de (Becado)-->
		<record model="ir.actions.act_window" id="accion_lista_evaluacion">
			<field name="name">Instrumento de Evaluación del Personal Becado</field>
			<field name="res_model">evaluacion.becados</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">Evaluar un Becado...</p>
			</field>
		</record>
		<!--Accionador para el menu de Becados (Becado)-->
		
		<record model="ir.ui.view" id="vista_formulario_evaluacion">
			<field name="name">Instrumento de Evaluación del Personal Becado</field>
			<field name="model">evaluacion.becados</field>
			<field name="arch" type="xml">
				<form string="Formulario de evaluación">

				<!-- Datos pertenecientes al Becado-->
					<separator string="" colspan="4"/>
					<field name="evaluado" nolabel="0" placeholder="Becado"/>
					<field name="ci" nolabel="0" placeholder="Cédula del becado"/>
					<field name="area" nolabel="0" placeholder="Area"/>
					<field name="sede" nolabel="0" placeholder="Sede"/>
					<field name="fecha_actual" nolabel="0"/>
					<field name="evaluador" nolabel="0" placeholder="Evaluador"/>


				<!-- Datos Tecnicos-->
					<separator string="" colspan="4"/>
					
					<notebook colspan="4">
						<!-- Seccion 1 -->
						<page string="A : Aparencia personal">
							
							<group colspan="4">
								<group string="">
									<field name="puntaje_higiene" placeholder="Puntaje de Higiene"/>
									<field name="puntaje_uniforme" placeholder="Puntaje de Uniforme"/>
									<field name="puntaje_rpersonales" placeholder="Puntaje de Relaciones Personales"/>
									<field name="puntaje_cortesia" placeholder="Puntaje de Cortesia"/>
									<field name="puntaje_comunicacion" placeholder="Puntaje de Comunicación"/>
									<field name="sub_total_1" placeholder="Sub total"/>
								</group>
								<group string="">
								
									
								</group>
							</group>
							
						</page>

						<!-- Seccion 2 -->


						<page string="B : Permanencia en la sala">
							
							<group colspan="4">
								<group string="">
									<field name="puntaje_atencion" placeholder="Puntaje de Atención al Cliente"/>
									<field name="puntaje_resolucion" placeholder="Puntaje de Resolución de Problemas"/>
									<field name="puntaje_uso" placeholder="Puntaje de Uso de Equipos Personales e Instituciones"/>
									
									<field name="sub_total_2" placeholder="Sub total"/>
								</group>
								<group string="">
								
									
								</group>
							</group>
							
						</page>

						<!-- Seccion 3 -->

						<page string="C : Organización">
							
							<group colspan="4">
								<group string="">
									<field name="puntaje_normas" placeholder="Puntaje de Atención al Cliente"/>
									
									
									<field name="sub_total_3" placeholder="Sub total"/>
								</group>
								<group string="">
								
									
								</group>
							</group>
							
						</page>

						<!-- Seccion 4 -->

						<page string="D : Desempeño de actividades">
							
							<group colspan="4">
								<group string="">
									<field name="puntaje_manejo" placeholder="Manejo de las Herramientas Tecnológicas"/>
									<field name="puntaje_iniciativa" placeholder="Iniciativa y Creatividad"/>
									<field name="puntaje_pertenencia" placeholder="Sentido de Pertenencia con la Institución"/>
									
									<field name="sub_total_4" placeholder="Sub total"/>
								</group>
								<group string="">
								
									
								</group>
							</group>
							
						</page>

						<!-- Seccion 4 -->

						<page string="Calificación / Observación">
							
							<group colspan="4">
								<group string="">
									<separator string="" colspan="4"/>
									<separator string="" colspan="4"/>
									<field name="calificacion_cuantitativa" placeholder="Calificación"/>
									<field name="observacion_general" placeholder="Observación General"/>
								</group>
								<group string="">
								
									
								</group>
							</group>
							
						</page>

					</notebook>

					<label string="AV SUCRE, EDIF BIBLIOTECA VIRTUAL, N 26 PISO PB, LOCAL S/N URB, SAN ISIDRO, MARACAY EDO. ARAGUA-VENEZUELA TELF.: (0243)2336068 / EXT: 101" colspan="2"/>

				</form>
			</field>
		</record>

