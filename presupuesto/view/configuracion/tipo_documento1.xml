<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <!--
SECUENCIA
-->

        <record id="seq_type_documento" model="ir.sequence.type">
            <field name="name">Documnetos</field>
            <field name="code">presupuesto.documento</field>
        </record>
        <record id="seq_documento" model="ir.sequence">
            <field name="name">Repair Order</field>
            <field name="code">presupuesto.documento</field>
            <field name="prefix">GDC</field>
            <field name="padding">6</field>
        </record>

        <record model="ir.actions.act_window" id="documento_list_action">
            <field name="name">Tipos de Documentos</field>
            <field name="res_model">presupuesto.documento</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Registrar  Documentos</p>
            </field>
        </record>
        <record model="ir.ui.view" id="documento_tree_view">
            <field name="name">documento.tree</field>
            <field name="model">presupuesto.documento</field>
            <field name="arch" type="xml">
                <tree string="Proyectos">
                    <field name="id_documento"  />
                    <field name="siglas" />
                    <field name="documento"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="proyecto_form_view">
            <field name="name">documento.form</field>
            <field name="model">presupuesto.documento</field>
            <field name="arch" type="xml">
                <form string="Formulario de Documentos">
                    <group colspan="2" col="2">
                        <separator string="Documentos" colspan="2"/>
                        <field name="id_documento" on_change="on_change_documento(id_documento)"/>
                        <field name="siglas" attrs="{'readonly':[('id_documento','>',0)]}" />
                        <field name="documento" attrs="{'readonly':[('id_documento','>',0)]}" />
                    </group>
                </form>
            </field>
        </record>

        <menuitem id="main_presupuesto_menu" name="Presupuesto" />
        <menuitem id="configuracion_menu" name="Configuracion" parent="main_presupuesto_menu" />
        <menuitem id="documento_menu" name="Tipo de Documentos"  parent="configuracion_menu" action="documento_list_action" />
    </data>
</openerp>