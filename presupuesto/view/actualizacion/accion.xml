<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.actions.act_window" id="accion_list_action">
            <field name="name">Accion de Proyecto</field>
            <field name="res_model">presupuesto.accion</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Registrar Accion de Proyectos</p>
            </field>
        </record>
        <record model="ir.ui.view" id="accion_tree_view">
            <field name="name">accion.tree</field>
            <field name="model">presupuesto.accion</field>
            <field name="arch" type="xml">
                <tree string="Accion de Proyectos">
                    <field name="cod_proyect_accion"/>
                    <field name="descripcion" />
                    <field name="unidad"/>
                    <field name="siglas"/>
                    <field name="monto" sum="Total Tax Included"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="accion_form_view">
            <field name="name">accion.form</field>
            <field name="model">presupuesto.accion</field>
            <field name="arch" type="xml">
                <form string="Formulario de Accion de Proyectos" version="7.0">
                    <group colspan="3">
                        <group colspan="4" col="4">
                            <separator string="Accion de Proyectos" />
                        </group>
                        <group olspan="4">
                            <field name="proyecto_id" widget="selection" placeholder="Seleccione..." on_change="on_change_proyecto(proyecto_id,'proyecto_id')"/> 
                        </group>
                        <group colspan="4" col="4">
                            <field name="codigo_proyecto"  on_change="on_change_proyecto(codigo_proyecto,'codigo_proyecto')" colspan="2" width="10"/>
                            <field name="codigo_accion" placeholder="Ej. 00-00-00" nolabel="1" width="500"/>
                        </group>
                        <group olspan="4">
                            <field name="descripcion" />
                            <field name="siglas" />
                            <field name="unidad" />
                            <field name="monto"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>
        <menuitem id="accion_menu" name="Proyecto y Accion"  parent="actualizar_menu" action="accion_list_action" />
    </data>
</openerp>