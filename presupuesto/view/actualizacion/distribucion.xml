<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.actions.act_window" id="distribucion_list_action">
            <field name="name">Distribucion de Presupuesto</field>
            <field name="res_model">presupuesto.distribucion</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Registrar Distribucion de Presupuesto</p>
            </field>
        </record>

         <record model="ir.ui.view" id="distribucion_tree_view">
            <field name="name">accion.tree</field>
            <field name="model">presupuesto.distribucion</field>
            <field name="arch" type="xml">
                <tree string="Distribucion de Presupuesto">
                    <field name="codigo_accion" string="Proyecto Accion"/>
                    <field name="partida" string="Codigo Ppto"/>
                    <field name="descripcion" string="Descripcion"/>
                    <field name="monto_pre" string="Asignacion Original"/>
                    <field name="fecha" string="Fecha de Apertura"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="distribucion_form_view">
            <field name="name">distribucion.form</field>
            <field name="model">presupuesto.distribucion</field>
            <field name="arch" type="xml">
                <form string="Formulario de Distribucion de Presupuesto" version="7.0">
                    <group colspan="3" col="3">
                        <group colspan="4" col="4">
                            <separator string="Distribucion de Presupuesto" />
                        </group>
                        <group colspan="4">
                            <field name="proyecto_id" placeholder="Seleccione..." width="150"/>
                        </group>
                        <group colspan="4" col="4">
                            <field name="codigo_accion" colspan="2" width="150" attrs="{'readonly':[('accion','=',False)]}"/>
                            <field name="accion" colspan="2" nolabel="1"  domain="[('proyecto_id','=',proyecto_id)]" on_change="on_change_accion(accion)" width="100"/>
                        </group>
                        <group colspan="4" col="4">
                            <field name="partida" colspan="2" width="150" on_change="on_change_partida(partida,'cod_partida')" />
                            <field name="descripcion" colspan="2" nolabel="1" on_change="on_change_partida(descripcion,'id_partidad')" context="{'default_parent_id': active_id}"/>
                        </group>
                        <group colspan="4" col="4">
                            <field name="monto_pre" colspan="2" digits="(14, 2)" />
                            <field name="aceptar" colspan="2" width="100" />
                        </group>
                        <group colspan="6" col="6">
                            <field name="fecha" colspan="2"/>
                            <field name="disponibilidad" colspan="2" width="200"/>
                            <field name="monto_proyecto" colspan="2" />
                        </group>
                    </group>
                </form>
            </field>
        </record>
        <menuitem id="distribucion_menu" name="Distribucion de Presupuesto"  parent="actualizar_menu" action="distribucion_list_action" />
    </data>
</openerp>