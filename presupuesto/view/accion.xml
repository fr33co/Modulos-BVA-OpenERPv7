<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.actions.act_window" id="accion_list_action">
            <field name="name">Accion de Proyecto</field>
            <field name="res_model">presupuesto.accion</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Registrar Accion de Proyectos</p>
            </field>
        </record>
        <record model="ir.ui.view" id="accion_tree_view">
            <field name="name">accion.tree</field>
            <field name="model">presupuesto.accion</field>
            <field name="arch" type="xml">
                <tree string="Accion de Proyectos">
                    <field name="codigo_accion"/>
                    <field name="descripcion" />
                    <field name="unidad"/>
                    <field name="siglas"/>
                    <field name="monto"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="accion_form_view">
            <field name="name">accion.form</field>
            <field name="model">presupuesto.accion</field>
            <field name="arch" type="xml">
                <form string="Formulario de Accion de Proyectos">
                    <group colspan="3" col="3">
                        <group colspan="4">
                            <separator string="Accion de Proyectos" colspan="4"/>
                            <field name="proyecto" on_change="on_change_proyecto(proyecto)"/>
                        </group>
                        <!--<group colspan="6" col="6">
                                <field name="codigo_proyecto" colspan="2"/>-->
                                <field name="codigo_accion"  colspan="2" />
                                <!--<field name="codigo_a_p"  colspan="2"/>
                        </group>-->
                        <group colspan="4">
                            <field name="descripcion" />
                             <field name="siglas" />
                            <field name="unidad" />
                            <field name="monto"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>
        <menuitem id="accion_menu" name="Proyecto y Accion"  parent="presupuesto_menu" action="accion_list_action" />
    </data>
</openerp>