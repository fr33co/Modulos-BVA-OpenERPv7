<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.actions.act_window" id="tras_tras_list_action">
            <field name="name">Traslado/Traspaso</field>
            <field name="res_model">presupuesto.traslado</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Actualizar Traslado/Traspaso</p>
            </field>
        </record>
        <record model="ir.ui.view" id="traslado_tree_view">
            <field name="name">traslado.tree</field>
            <field name="model">presupuesto.traslado</field>
            <field name="arch" type="xml">
                <tree string="Traslado/Traspaso"  colors="blue:aumentar&gt;0;red:disminuir&gt;0">
                    <field name="id_tipo_doc"/>
                    <field name="numero"/>
                    <field name="codigo_proyecto_accion"/>
                    <field name="cod_presupuesto"/>
                    <field name="motivo"/>
                    <field name="aumentar" string="Aumento" sum="Total Tax Included" />
                    <field name="disminuir"  string="Disminucion" sum="Total Tax Included" />
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="traslado_form_view">
            <field name="name">traslado.form</field>
            <field name="model">presupuesto.traslado</field>
            <field name="arch" type="xml">
                <form string="Formulario de Traslado/Traspaso"  version="7.0">
                    <separator string="Traslado/Traspaso" />
                    <group string="informacion" colspan="3" col="3">
                        <group colspan="1">
                            <field name="id_tipo_doc" widget="selection" class="oe_inline" on_change="get_last_numero(id_tipo_doc)"/>
                            <field name="oficio" class="oe_inline"/>
                        </group>
                        <group colspan="1">
                            <field name="numero" class="oe_inline" on_change="on_change_get_row(numero,id_tipo_doc)"/>
                            <field name="fecha_resolucion" />
                        </group>
                        <group colspan="1">
                            <field name="fecha"  />
                        </group>
                    </group>
                    <group>
                        <field name="motivo" colspan="2" />
                    </group>

                    <group string="informacion2" colspan="3" col="3">
                        <group colspan="1">
                            <field name="codigo_proyecto_accion" class="oe_inline" on_change="on_change_accion(codigo_proyecto_accion,'cod_accion')" width="100"/>
                        </group>
                        <group colspan="1">
                            <field name="id_proyecto_accion" class="oe_inline" on_change="on_change_accion(id_proyecto_accion,'accion')"/>
                            <field name="aumen_dism" class="oe_inline"/>
                            <field name="aumentar" class="oe_inline" attrs="{'invisible':[('aumen_dism','=','2')]}"   />
                            <field name="disminuir" class="oe_inline" attrs="{'invisible':[('aumen_dism','in',('1',False))]}"    />
                        </group>
                        <group colspan="1">
                                <field name="cod_presupuesto" class="oe_inline" on_change="on_change_partida(cod_presupuesto)"/>
                                <field name="par_presu" class="oe_inline" />
                                <field name="disponibilidad" class="oe_inline" />
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <menuitem id="main_presupuesto_menu" name="Presupuesto" />
        <menuitem id="modificacion_presupuesto_menu" name="Modificacion Presupuestaria" parent="main_presupuesto_menu" />
        <menuitem id="traslado_traspaso_menu" name="Traslado/Traspaso"  parent="modificacion_presupuesto_menu" action="tras_tras_list_action" />
    </data>
</openerp>