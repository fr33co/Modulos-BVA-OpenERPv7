<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.actions.act_window" id="creditos_list_action">
            <field name="name">Creditos Adicionales</field>
            <field name="res_model">presupuesto.creditos</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Registrar  Creditos Adicionales</p>
            </field>
        </record>
        <record model="ir.ui.view" id="creditos_tree_view">
            <field name="name">creditos.tree</field>
            <field name="model">presupuesto.creditos</field>
            <field name="arch" type="xml">
                <tree string="Creditos Adicionales">
                    <field name="id_tipo_doc"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="creditos_form_view">
            <field name="name">creditos.form</field>
            <field name="model">presupuesto.creditos</field>
            <field name="arch" type="xml">
                <form string="Formulario de Creditos Adicionales" version="7.0">
                    <!-- <group> -->
                        <group string="Creditos Adicionales" colspan="3" col="3">
                            <group >
                                <field name="id_tipo_doc" class="oe_inline" widget="selection" on_change="get_last_numero(id_tipo_doc)"/>
                                <field name="numero" class="oe_inline" />
                                <field name="fecha" class="oe_inline"/>
                            </group>
                            <group >
                                <field name="oficio" class="oe_inline"/>
                                <field name="fecha_oficion" class="oe_inline"/>
        
                            </group>
                            <group >
                                <field name="proyecto_accion" class="oe_inline" on_change="on_change_accion(proyecto_accion,'cod_accion')" />
                                <field name="id_proyecto_accion" class="oe_inline" widget="selection" on_change="on_change_accion(id_proyecto_accion,'accion')"/>
                            </group>
                        </group>
                        <group >
                            <field name="observacion" />
                        </group>
                        <separator/>
                        <group colspan="6" col="6">

                            <field name="cod_presupuesto"  on_change="on_change_partida(cod_presupuesto)" colspan="2"/>
                            <field name="desc_presupuesto" colspan="2" width="250" nolabel="1" readonly="1"/>
                            <field name="disponibilidad" colspan="2"  nolabel="1" readonly="1"/>
                        </group>
                    <!-- </group> -->
                </form>
            </field>
        </record>

        <menuitem id="creditos_menu" name="Creditos Adicionales"  parent="modificacion_presupuesto_menu" action="creditos_list_action" />
    </data>
</openerp>