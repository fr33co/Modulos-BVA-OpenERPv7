<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<!-- Menu Sector -->
		<record model="ir.actions.act_window" id="sector_list_action">
		    <field name="name">Registrar.sector</field>
		    <field name="res_model">sectores</field>
		    <field name="view_type">form</field>
		    <field name="view_mode">form</field>
		    <field name="help" type="html">
				<p class="oe_view_nocontent_create">Registrar Sector</p>
		    </field>
		</record> 
		
		<!-- Formulario de Sectores -->
		<record model="ir.ui.view" id="sector_form_view">
			<field name="name">sector.form</field>
			<field name="model">sectores</field>
			<field name="arch" type="xml">
				<form string="sector Form">
					<field name="estado" widget="selection" />
			        <field name="ciudad" widget="selection" />
			        <field name="municipio" domain="[('estado','=',estado)]"/>
			        <field name="parroquia" domain="[('municipio','=',municipio)]"/>
			        <field name="sector" />
			       	<field name="codigo_s" />
				</form>
			</field>			
		</record>

		<!-- Vista lista de Registro de sectores -->
		<record model="ir.ui.view" id="sectores_tree_view">
			<field name="name">sector.tree</field>
			<field name="model">sectores</field>
			<field name="arch" type="xml">
				<tree string="parroquias Tree">
					<field name="estado" />
					<field name="municipio" />
					<field name="sector" />
				</tree>
			</field>
		</record>

		<menuitem id="sector_menu" name="Sector" parent="topologia_menu" action="sector_list_action" />
		
	</data>
</openerp>