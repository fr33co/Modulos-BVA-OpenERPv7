<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<!-- Menu Ciudad -->
		 <record model="ir.actions.act_window" id="ciudad_list_action">
		    <field name="name">Registrar.ciudad</field>
		    <field name="res_model">ciudades</field>
		    <field name="view_type">form</field>
		    <field name="view_mode">tree,form</field>
		    <field name="help" type="html">
				<p class="oe_view_nocontent_create">Registrar Ciudad</p>
		    </field>
		</record>
		
		<!-- Vista formulario de Registro de Ciudad -->
		<record model="ir.ui.view" id="ciudad_form_view">
			<field name="name">ciudad.form</field>
			<field name="model">ciudades</field>
			<field name="arch" type="xml">
				<form string="ciudad Form">
					<field name="estado" widget="selection" />
					<field name="ciudad" />
					<field name="codigo_c" />
				</form>
			</field>			
		</record>
		
		<!-- Vista lista de Registro de Ciudad -->
		<record model="ir.ui.view" id="ciudad_tree_view">
			<field name="name">ciudad.tree</field>
			<field name="model">ciudades</field>
			<field name="arch" type="xml">
				<tree string="ciudad Tree">
					<field name="estado" />
					<field name="ciudad" />
				</tree>
			</field>
		</record>
		
		<menuitem id="ciudad_menu" name="Ciudad" parent="topologia_menu" action="ciudad_list_action" />
		
	</data>
</openerp>