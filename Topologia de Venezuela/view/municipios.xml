<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<!-- Menu Municipio -->
		<record model="ir.actions.act_window" id="municipio_list_action">
		    <field name="name">Registrar.municipio</field>
		    <field name="res_model">municipios</field>
		    <field name="view_type">form</field>
		    <field name="view_mode">form,tree</field>
		    <field name="help" type="html">
				<p class="oe_view_nocontent_create">Registrar Municipio</p>
		    </field>
		</record> 
		
		<!-- Formulario de Municipio -->
		<record model="ir.ui.view" id="municipio_form_view">
			<field name="name">municipio.form</field>
			<field name="model">municipios</field>
			<field name="arch" type="xml">
				<form string="municipio Form">
			        <field name="estado" widget="selection" />
			        <field name="municipio" />
			       	<field name="codigo_m" />
				</form>
			</field>			
		</record>

		<!-- Vista lista de Registro de Municipio -->
		<record model="ir.ui.view" id="municipio_tree_view">
			<field name="name">municipio.tree</field>
			<field name="model">municipios</field>
			<field name="arch" type="xml">
				<tree string="municipio Tree">
					<field name="estado" />
					<field name="municipio" />
				</tree>
			</field>
		</record>
				
		<menuitem id="municipio_menu" name="Municipio" parent="topologia_menu" action="municipio_list_action" />
		
	</data>
</openerp>