        </record>

        <menuitem id="main_gobiernodecalle_menu" name="Gobierno de calle" sequence="120"/>/>

        <menuitem id="proyectos_menu" name="Proyectos" parent="main_gobiernodecalle_menu" />
        <menuitem id="asigancion_menu" name="Asignacion" parent="proyectos_menu" action="proyectos_list_action" />
        <menuitem id="fase_menu" name="Fases" parent="proyectos_menu" action="fases_list_action" />
        <menuitem id="tareas_menu" name="Tareas" parent="proyectos_menu" action="tareas_list_action" />
        
    </data>
</openerp>
