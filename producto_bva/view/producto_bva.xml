<?xml version="1.0" encoding="UTF-8"?>
<openerp>
  	<data>
  		<record model="ir.ui.view" id="producto_form_bva_view">
			<field name="name">producto.form.bva</field>
			<field name="model">product.product</field>
			<field name="inherit_id" ref="product.product_normal_form_view" />
			<field name="arch" type="xml">
				<field name="default_code" position="replace">
						<field name="codigo" on_change="on_change_codigo(codigo)"/>
				</field>
				<field name="codigo" position="after">
						<field name="numero" on_change="on_change_identificacion(numero,codigo)" attrs="{'readonly':[('codigo','=','No se codifica')]}" />
				</field>
				<field name="list_price" position="replace">
						<field name="v_unitario" />
				</field>
				<field name="numero" position="after">
						<field name="v_total" />
				</field>
				<field name="ean13" position="replace">
						<field name="nidentificacion" invisible="1"/>
				</field>
				<field name="description" position="before">
					<group>
						<group>
							<field name="g" />
							<field name="sg" />
							<field name="s" />
						</group>
						<group>
							<field name="estado" />
						</group>
					</group>
				</field>

			</field>			
		</record>

		<record model="ir.ui.view" id="producto_tree_bva_view">
			<field name="name">producto.tree.bva</field>
			<field name="model">product.product</field>
			<field name="inherit_id" ref="product.product_product_tree_view" />
			<field name="arch" type="xml">
				<field name="default_code" position="replace">
						<field name="g"/>
				</field>	
				<field name="name" position="replace">
						<field name="sg"/>
				</field>
				<field name="categ_id" position="replace">
						<field name="s"/>
				</field> 
				<field name="variants" position="replace">
						<field name="nidentificacion"/>
				</field> 
				<field name="uom_id" position="replace">
						<field name="estado"/>
				</field> 
				<field name="estado" position="after">
						<field name="name"/>
				</field> 
				<field name="lst_price" position="replace">
						<field name="v_unitario" />
				</field>
				<field name="v_unitario" position="after">
						<field name="v_total" />
				</field> 
				<field name="virtual_available" position="replace">
						<field name="virtual_available" invisible="1"/>
				</field>
				<field name="state" position="replace">
						<field name="state" invisible="1" />
				</field> 
	        </field>
		</record>	
   	</data>
</openerp>