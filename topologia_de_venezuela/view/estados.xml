<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

		<!-- Menu Estado -->
		<record model="ir.actions.act_window" id="estado_list_action">
		    <field name="name">Registrar.estado</field>
		    <field name="res_model">estados</field>
		    <field name="view_type">form</field>
		    <field name="view_mode">form,tree</field>
		    <field name="help" type="html">
				<p class="oe_view_nocontent_create">Registrar Estado</p>
		    </field>
		</record> 
		
		<!-- Formulario de Estados -->
		<record model="ir.ui.view" id="estados_form_view">
			<field name="name">estado.form</field>
			<field name="model">estados</field>
			<field name="arch" type="xml">
				<form string="estado Form">
			        <field name="estado" />
			       	<field name="codigo_e" />
				</form>
			</field>			
		</record>

		<!-- Vista lista de Registro de Estados -->
		<record model="ir.ui.view" id="estados_tree_view">
			<field name="name">estado.tree</field>
			<field name="model">estados</field>
			<field name="arch" type="xml">
				<tree string="estado Tree">
					<field name="estado" />
				</tree>
			</field>			
		</record>

		<menuitem id="main_topologia_menu" name="Topologia" /> 

		<menuitem id="topologia_menu" name="Topologia de Venezuela" parent="main_topologia_menu" />

		<menuitem id="estado_menu" name="Estado" parent="topologia_menu" action="estado_list_action" />
		
	</data>
</openerp>