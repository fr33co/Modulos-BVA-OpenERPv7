<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

	<record model="ir.actions.act_window" id="action_movement_employee">
	    <field name="name">Asignación de movimiento a empleados</field>
	    <field name="res_model">hr.movement.employee</field>
	    <field name="view_type">form</field>
	    <field name="view_mode">tree,form</field>
	</record>

	<record id="view_movement_employee" model="ir.ui.view">
	    <field name="name">Asignación de movimiento a empleados</field>
	    <field name="model">hr.movement.employee</field>
	    <field name="arch" type="xml">
		<form string="Asignación de movimiento a empleados" version="7.0">
		    <fielset>
			<div style="width:950px;" class="oe_horizontal_separator">Datos del empleado (Nómina Regular)</div>
			<table style="width:950px;" border="0">
			    <tr>
				<td><b>Cédula</b></td>
				<td><field name="cedula" style="width:100px;" on_change="data_employee(cedula)"/></td>
				<td><b>Fecha de ingreso</b></td>
				<td><field name="date_ingreso"/></td>
				<td><b>Fecha de egreso</b></td>
				<td><field name="date_egreso"/></td>
			    </tr>
			    <tr style="text-align:center;">
				<td>
				    <b>cargo anterior</b>
				</td>
				<td>
				    <field name="charge_acterior" widget="selection"/>
				</td>
				<td>
				    <b>Nombres</b>
				</td>
				<td>
				    <field name="nombres"/>
				</td>
				<td>
				    <b>Estatus</b>
				</td>
				<td>
				    <field name="status"/>
				</td>
			    </tr>
			    <tr>
				<td><b>Empleado</b></td>
				<td><field name="emp" widget="selection"/></td>
				<td><b>Sueldo</b></td>
				<td><field name="sueldo"/></td>
				<td><b>Dependencia</b></td>
				<td><field name="dep_lab" widget="selection"/></td>
			    </tr>
			    <tr>
				<td colspan="6">
				    <div style="width:950px;" class="oe_horizontal_separator">
					Movimientos(s) Asignados(s) en la nómina
				    </div>
				</td>
			    </tr>
			    <tr>
				<td><b>Fecha de reingreso</b></td>
				<td><field name="reingreso"/></td>
				<td><b>Tipo nomina</b></td>
				<td><field name="payslip" widget="selection"/></td>
				<td><b>Empleado</b></td>
				<td><field name="emp_egre" widget="selection"/></td>
			    </tr>
			    <tr>
				<td><b>Cargo desempeñado</b></td>
				<td><field name="charge_new" widget="selection" on_change="search_hr_data(charge_new,'1')"/></td>
				<td><b>Departamento</b></td>
				<td><field name="dep_new" widget="selection"/></td>
				<td><b>Sueldo</b></td>
				<td><field name="sueldo_new"/></td>
			    </tr>
			    <tr>
				<td><b>Descripción</b></td>
				<td colspan="6">
				    <field name="observacion"/>
				</td>
			    </tr>
			    <tr>
				<td>
				    <button name="process_reingreso" type="object" string="Procesar" confirm="¿Desea realizar el cambio del reingreso del empleado?" icon="gtk-apply" class="oe_highlight"/>
				</td>
			    </tr>
			</table>
		    </fielset>
		</form>
	    </field>
	</record>

	<!-- Forma de busqueda para concepto-->
	<!--<record model="ir.ui.view" id="search_concepts">
