			<field name="formula" />
			<field name="concepto" />
			<field name="items"/>
		    </search>
		</field>
	</record>-->

	<record model="ir.ui.view" id="movement_employee_tree">
	<field name="name">Actualización de reingreso de empleados.tree</field>
	<field name="model">hr.movement.employee</field>
	<field name="arch" type="xml">
	    <tree string="Lista de reingreso de empleados">
		<field name="cedula"/>
		<field name="nombres"/>
		<field name="date_ingreso"/>
		<field name="date_egreso"/>
		<field name="payslip"/>
		<field name="charge_new"/>
		<field name="observacion"/>
		<field name="status"/>
	    </tree>
	</field>
        </record>

        <menuitem parent="recursos_humanos_main" id="sub_menu_movement_employee" action="action_movement_employee" name="Asignación de movimiento a empleados" sequence="2"/>

    </data>
</openerp>
