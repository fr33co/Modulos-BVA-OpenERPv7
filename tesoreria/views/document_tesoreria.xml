<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
            <record model="ir.actions.act_window" id="action_tesoreria">
                <field name="name">Documentos Adjuntos</field>
                <field name="res_model">ir.tesoreria</field>
                <field name="view_type">form</field>
                <field name="view_mode">tree,form</field>
            </record>
            
            <record id="forms_tesoreria" model="ir.ui.view">
            <field name="model">ir.tesoreria</field>
            <field name="arch" type="xml">
                <form string="Documentos Adjuntos" version="7.0">
                   <sheet>
                    <label for="name" class="oe_edit_only"/>
                    <h1>
                        <field name="name"/>
                        
                    </h1>
                    <group>
                        <group string="Datos adjunto">
                            <field name="type"/>
                            <field name="datas" filename="datas_fname" attrs="{'invisible':[('type','=','url')]}"/>
                            <field name="datas_fname" invisible="1" attrs="{'invisible':[('type','=','url')]}" class="oe_inline oe_right"/>
                            <field name="url" widget="url" attrs="{'invisible':[('type','=','binary')]}"/>
                        </group>
                        <group string="Caracteristica del modulo">
                            <field name="res_model"/>
                            <field name="res_id"/>
                            <field name="res_name"/>
                            <field name="company_id" groups="base.group_multi_company" widget="selection"/>
                        </group>
                        <group groups="base.group_no_one" string="Historial">
                            <label for="create_uid" string="Creacion"/>
                            <div name="creation_div">
                                <field name="create_uid" readonly="1" class="oe_inline"/>
                                <field name="create_date" readonly="1" class="oe_inline"/>
                            </div>
                        </group>
                        <group name="description_group" string="Descripcion" colspan="4">
                            <field name="description" nolabel="1"/>
                        </group>
                    </group>
                  </sheet>
                </form>
            </field>
        </record>
<!--
        colors="#0A9134:item=='materiales';#F4131F:item=='cotizacion';" toolbar="1"
-->
        <record id="tesoreria_tree" model="ir.ui.view">
            <field name="model">ir.tesoreria</field>
            <field name="arch" type="xml">
                <tree string="Documentos Adjuntos">
                    <field name="name"/>
                    <field name="datas_fname"/>
                    <field name="type" invisible="1"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <field name="create_uid"/>
                    <field name="create_date"/>
<!--
										<field name="item" invisible="1"/>
-->
                </tree>
            </field>
        </record>
        <record id="search_tesoreria" model="ir.ui.view">
            <field name="model">ir.tesoreria</field>
            <field name="arch" type="xml">
                <search string="Attachments">
                    <field name="name" filter_domain="['|', ('name','ilike',self), ('datas_fname','ilike',self)]" string="Attachment"/>
                    <field name="create_date"/>
                    <filter icon="terp-stage"
                        string="URL"
                        domain="[('type','=','url')]"/>
                    <filter icon="terp-stock_align_left_24"
                        string="Binary"
                        domain="[('type','=','binary')]"/>
                    <separator/>
                    <filter name="my_documents_filter" 
                        string="My Document(s)"
                        icon="terp-personal"
                        domain="[('create_uid','=',uid)]"
                        help="Filter on my documents"/>
                    <field name="create_uid"/>
                    <field name="type"/>
                    <group expand="0" string="Group By...">
                        <filter string="Owner" icon="terp-personal" domain="[]" context="{'group_by':'create_uid'}"/>
                        <filter string="Type" icon="terp-stock_symbol-selection" domain="[]" context="{'group_by':'type'}" groups="base.group_no_one"/>
                        <filter string="Company" icon="terp-gtk-home" domain="[]" context="{'group_by':'company_id'}" groups="base.group_multi_company"/>
                        <filter string="Month" help="Creation Month" icon="terp-go-month" domain="[]" context="{'group_by':'create_date'}"/>
                    </group>
                </search>
            </field>
        </record>
        <record id="action_doc_tesoreria" model="ir.actions.act_window">
            <field name="name">Documentos Adjuntos</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ir.tesoreria</field>
            <field name="view_type">form</field>
            <field name="view_id" eval="False"/>
            <field name="search_view_id" ref="search_tesoreria"/>
        </record>

        <menuitem parent="menu_tesoreria" id="menu_reportes" name="Reportes" sequence="3"/>

        <menuitem parent="menu_reportes" id="sub_menu_reportes" action="action_tesoreria" name="Reportes de Pagos"/>
        
    </data>
</openerp>
